<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane id="background" styleClass="background" stylesheets="@../assets/admin.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univ_amu.iut.LoginController">
    <stylesheets>
        <URL value="@../assets/style.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="30" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="70" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="100" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox id="vbox" alignment="CENTER" maxHeight="300" maxWidth="400" spacing="20" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
            <children>
                <Label fx:id="labelIdentifiant" styleClass="textLabel" text="IDENTIFIANT" textAlignment="LEFT" />
                <TextField fx:id="identifiant" maxWidth="200" prefHeight="35" styleClass="textField" />
                <Label fx:id="labelMotDePasseAdmin" styleClass="textLabel" text="MOT DE PASSE" />
                <PasswordField fx:id="motDePasse" maxWidth="200" prefHeight="35" styleClass="textField" />
                <HBox alignment="CENTER" spacing="30">
                    <Button id="button" alignment="CENTER" maxWidth="150" onAction="#verificationSwitchTo" prefHeight="49.0" prefWidth="130.0" userData="fxml/carte_admin.fxml">
                        <padding>
                            <Insets topRightBottomLeft="10" />
                        </padding>
                        <graphic>
                            <HBox alignment="CENTER" spacing="10">
                                <children>
                                    <ImageView>
                                        <image>
                                            <Image requestedHeight="25" requestedWidth="25" url="@../assets/img/suivant.png" />
                                        </image>
                                    </ImageView>
                                    <Label fx:id="labelConnecter" text="Se connecter" />
                                </children>
                            </HBox>
                        </graphic>
                    </Button>
                    <Button id="button" alignment="CENTER" maxWidth="150" onAction="#callSwitchTo" prefHeight="49.0" prefWidth="130.0" userData="fxml/accueil.fxml">
                        <padding>
                            <Insets topRightBottomLeft="10" />
                        </padding>
                        <graphic>
                            <HBox alignment="CENTER" spacing="10">
                                <children>
                                    <ImageView>
                                        <image>
                                            <Image requestedHeight="25" requestedWidth="25" url="@../assets/img/fermer.png" />
                                        </image>
                                    </ImageView>
                                    <Label fx:id="labelAnnuler" text="Annuler" />
                                </children>
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
            </children>
        </VBox>
    </children>
</GridPane>
